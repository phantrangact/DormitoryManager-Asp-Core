<div id="modal-add-edit" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add/edit Room</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form method="post" action="#" class="form-horizontal" role="form" id="frmRoom">
                        <div class="row">
                            <div class="form-group col-md-8 col-sm-8">
                                <input type="hidden" id="hidId" value="" />
                                <label for="txtRoomName" class="control-label">Tên phòng</label>
                                <input type="text" name="StudentName" class="form-control" id="txtRoomName">
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <label for="txtRoomHeight" class="control-label">Chiều cao</label>
                                <input type="number" name="RoomHeight" class="form-control" id="txtRoomHeight">
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <label for="txtRoomWidth" class="control-label">Chiều rộng</label>
                                <input type="number" name="RoomWidth" class="form-control" id="txtRoomWidth" />
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <label for="txtElectricityPrice" class="control-label">Giá điện</label>
                                <input type="number" name="ElectricityPrice" class="form-control" id="txtElectricityPrice" />
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <label for="txtWaterPrice" class="control-label">Giá nước</label>
                                <input type="number" name="WaterPrice" class="form-control" id="txtWaterPrice" />
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <label for="txtInternetPrice" class="control-label">Giá nước</label>
                                <input type="number" name="InternetPrice" class="form-control" id="txtInternetPrice" />
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <label for="txtTotalBed" class="control-label">Tổng số giường</label>
                                <input type="number" name="TotalBed" class="form-control" id="txtTotalBed" />
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <label for="txtTotalEmtyBed" class="control-label">Tổng số giường trống</label>
                                <input type="number" name="TotalEmtyBed" class="form-control" id="txtTotalEmtyBed" />
                            </div>
                            <div class="form-group col-md-8 col-sm-8">
                                <select id="lst-data-floor" class="form-control">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="justify-content-between">
                                <button type="button" id="btnSave" class="btn btn-primary">
                                    <i class="fa fa-save mr-1"></i>Save
                                </button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-default float-right">Close</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="result-data-floor" type="x-tmpl-mustache">
    <option value="{{Id}}">{{Name}}</option>
</script>
